{
  "name": "@web42-ai/core-api",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "Core API Express server for web42-ai platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bun --watch --env-file=.env src/index.ts",
    "build": "tsc",
    "start": "bun -r dotenv/config dist/index.js",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "migrate": "bun run ../../packages/migrations/dist/cli.js up",
    "migrate:down": "bun run ../../packages/migrations/dist/cli.js down",
    "migrate:status": "bun run ../../packages/migrations/dist/cli.js status"
  },
  "dependencies": {
    "@anatine/zod-openapi": "^2.2.8",
    "@supabase/supabase-js": "^2.45.0",
    "@web42-ai/logger": "workspace:*",
    "@web42-ai/migrations": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "mongodb": "^6.18.0",
    "pino": "^9.7.0",
    "pino-http": "^10.5.0",
    "swagger-ui-express": "^5.0.1",
    "umzug": "^3.8.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.15.3",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@web42-ai/eslint-config": "workspace:*",
    "@web42-ai/typescript-config": "workspace:*",
    "eslint": "^9.31.0",
    "supertest": "^7.1.4",
    "tsx": "^4.19.2",
    "typescript": "5.8.2",
    "vitest": "3.2.4"
  }
}
